<Window x:Class="win_app.Windows.document_properties"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:win_app.Elements"
        mc:Ignorable="d"
        Title="Label Properties" Height="420" Width="520"
        WindowStartupLocation="CenterScreen" WindowStyle="ThreeDBorderWindow" 
        Background="#EBEBEB" ResizeMode="NoResize">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="65"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
        <!-- Top bar: Image & description -->
        <Grid Grid.Row="0" Background="#0078D7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Section: Image -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Center" 
                        VerticalAlignment="Center" Margin="20 0 0 0">
                <Image x:Name="HeaderImage" Source="/Assets/icons/icons8-project-setup-100.png" 
                       Width="45" Height="45" />
            </StackPanel>

            <!-- Right Section: Title and Description -->
            <Grid Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="TitleText" Grid.Row="0" 
                           Text="Document Properties" 
                           FontWeight="Bold" FontSize="12" 
                           VerticalAlignment="Bottom" Margin="20 -10 0 0" Height="15"/>

                <TextBlock x:Name="DescriptionText" Grid.Row="1" Foreground="White"
                           Text="Set the properties of the document like width, height, margins, etc." 
                           FontSize="10" VerticalAlignment="Top" Margin="40 5 0 0" 
                           Height="Auto" TextWrapping="Wrap"/>

            </Grid>
        </Grid>
        
        <!-- Label properties -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="140"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left side: label dimension -->
            <Border Grid.Column="0" BorderBrush="Gray" Padding="15 10 15 0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Label orientation -->
                    <Grid Grid.Row="0" Margin="0 10 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <!-- Text width -->
                            <ColumnDefinition Width="*" />
                            <!-- Expanding line -->
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Label Orientation" FontWeight="Bold" FontSize="10"/>

                        <Line X1="0" Y1="0" X2="1" Y2="0" 
                              Grid.Column="1"
                              Stretch="Uniform"
                              Stroke="Black" StrokeThickness="1" 
                              VerticalAlignment="Center" Margin="5 4 0 0"/>
                    </Grid>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" 
                                VerticalAlignment="Center" Margin="20 0 20 0">
                        <Button Height="50" Width="70" Margin="5" Background="White" BorderThickness="0.5">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                <Image Source="/Assets/icons/icons8-column-100.png" Height="30" Width="30"/>
                                <TextBlock Text="Portrait" FontSize="10" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Height="50" Width="70" Margin="5" Background="White" BorderThickness="0.5">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                <Image Source="/Assets/icons/icons8-row-100.png" Height="30" Width="30"/>
                                <TextBlock Text="Landscape" FontSize="10" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    
                 
                    <!-- Label measurement unit dropdown -->
                    <Grid Grid.Row="2" Margin="0 5 0 0">
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" 
                                   FontWeight="SemiBold" FontSize="10" Text="Unit of measure:" />
                        <ComboBox Height="24" Margin="97,0,0,0" VerticalAlignment="Center" IsEditable="False">
                            <ComboBoxItem Content="mm" />
                            <ComboBoxItem Content="inch" />
                        </ComboBox>
                    </Grid>

                    <!-- Label dimensions -->
                    <Grid Grid.Row="3" Margin="0 10 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <!-- Text width -->
                            <ColumnDefinition Width="*" />
                            <!-- Expanding line -->
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Dimensions" FontWeight="Bold" FontSize="10"/>

                        <Line X1="0" Y1="0" X2="1" Y2="0" 
                              Grid.Column="1"
                              Stretch="Uniform"
                              Stroke="Black" StrokeThickness="1" 
                              VerticalAlignment="Center" Margin="5 4 0 0"/>
                    </Grid>
                    <Grid Grid.Row="4">
                        <UniformGrid Columns="4" Rows="1">
                            <TextBlock Grid.Column="0" Text="Height :" FontSize="10" Margin="0,10,0,0"/>
                            <TextBox Grid.Column="1" Width="70" Height="20" Margin="0,5,0,0" 
                                     VerticalContentAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="Width :" FontSize="10" Margin="0,10,0,0"/>
                            <TextBox Grid.Column="3" Width="70" Height="20" Margin="10,5,0,0" 
                                     VerticalContentAlignment="Center"/>
                        </UniformGrid>
                    </Grid>

                    <!-- Label margins -->
                    <Grid Grid.Row="5" Margin="0 10 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <!-- Text width -->
                            <ColumnDefinition Width="*" />
                            <!-- Expanding line -->
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Margins" FontWeight="Bold" FontSize="10"/>

                        <Line X1="0" Y1="0" X2="1" Y2="0" 
                              Grid.Column="1"
                              Stretch="Uniform"
                              Stroke="Black" StrokeThickness="1" 
                              VerticalAlignment="Center" Margin="5 4 0 0"/>
                    </Grid>

                    <Grid Grid.Row="6">
                        <UniformGrid Columns="4" Rows="2">
                            <TextBlock Grid.Column="0" Text="Left :" FontSize="10" Margin="0,10,0,0"/>
                            <TextBox Grid.Column="1" Width="70" Height="20" Margin="0,5,0,0" 
                                     VerticalContentAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="Top :" FontSize="10" Margin="0,10,0,0"/>
                            <TextBox Grid.Column="3" Width="70" Height="20" Margin="10,5,0,0" 
                                     VerticalContentAlignment="Center"/>

                            <TextBlock Grid.Column="0" Text="Right :" FontSize="10" Margin="0,10,0,0"/>
                            <TextBox Grid.Column="1" Width="70" Height="20" Margin="0,5,0,0" 
                                     VerticalContentAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="Bottom :" FontSize="10" Margin="0,10,0,0"/>
                            <TextBox Grid.Column="3" Width="70" Height="20" Margin="10,5,0,0" 
                                     VerticalContentAlignment="Center"/>
                        </UniformGrid>
                        
                    </Grid>
                </Grid>
            </Border>

            <!-- Right side: label preview -->
            <Border Grid.Column="1" Background="LightGray" />
            
        </Grid>

        <!-- Accept, Cancel Button -->
        <Grid Grid.Row="2" VerticalAlignment="Center"
            HorizontalAlignment="Center" Width="420"
            Margin="0,0,0,0" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="340"/>
                <ColumnDefinition Width="80" />
            </Grid.ColumnDefinitions>

            <Button x:Name="BackButton" Grid.Column="0" Content="Cancel"
                VerticalAlignment="Center" HorizontalAlignment="Right"
                Height="25" Width="70"/>    

            <Button x:Name="NextButton" Grid.Column="1" Content="Accept" IsEnabled="False"
                VerticalAlignment="Center" HorizontalAlignment="Right"
                Height="25" Width="70"/>

        </Grid>



    </Grid>
</Window>
