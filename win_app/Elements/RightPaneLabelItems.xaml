<UserControl x:Class="win_app.Elements.RightPaneLabelItems"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:win_app.Converters"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="300"
             x:Name="Root">

    <UserControl.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#0078D7">
            <TextBlock Text="Label Items"
                       Foreground="White"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontWeight="Bold"/>
        </Border>

        <TabControl Grid.Row="1" Margin="5">
            <!-- for fixed items -->
            <TabItem Header="Fixed Items">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!-- Toolbar -->
                        <RowDefinition Height="*" />
                        <!-- DataGrid -->
                        <RowDefinition Height="3" />
                        <!-- GridSplitter -->
                        <RowDefinition Height="Auto" />
                        <!-- Style section -->
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <ToolBar Grid.Row="0">
                        <Button Click="AddFixedItem_Click" ToolTip="Add Fixed Item">
                            <Image Source="/Assets/icons/icons8-insert-table-48.png" Width="18"/>
                        </Button>
                        <Button Click="RemoveFixedItem_Click" ToolTip="Remove Selected">
                            <Image Source="/Assets/icons/icons8-delete-table-48.png" Width="18"/>
                        </Button>
                    </ToolBar>

                    <!-- DataGrid -->
                    <DataGrid x:Name="FixedItemsGrid"
                                Grid.Row="1"
                                ItemsSource="{Binding FixedItems}"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                ColumnWidth="*"
                                HeadersVisibility="Column"
                                SelectionChanged="FixedItemsGrid_SelectionChanged">           
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                            <DataGridComboBoxColumn Header="Type"
                                                SelectedItemBinding="{Binding Type}"
                                                ItemsSource="{Binding ItemTypes, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Splitter -->
                    <GridSplitter Grid.Row="2"
                                  Height="5"
                                  HorizontalAlignment="Stretch"
                                  Background="Gray"
                                  ShowsPreview="True"
                                  ResizeDirection="Rows"/>

                    <!-- Properties -->
                    <Border Grid.Row="3"
                            Background="#F0F0F0"
                            Padding="10"
                            Visibility="{Binding IsFixedStyleVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="Properties" FontWeight="Bold" Margin="0 0 0 8"/>
                            
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <TextBlock Text="(example) Font Size:"/>
                                    <TextBox Width="100" Margin="0 0 0 10"/>
                                    <TextBlock Text="(example) Value Format:"/>
                                    <ComboBox Width="150">
                                        <ComboBoxItem Content="Decimal" />
                                        <ComboBoxItem Content="Percentage" />
                                    </ComboBox>
                                </StackPanel>
                            </ScrollViewer>
                            
                        </StackPanel>
                    </Border>
                </Grid>


            </TabItem>

            <!-- for Variable items -->
            <TabItem Header="Variable Items">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!-- Toolbar -->
                        <RowDefinition Height="*" />
                        <!-- DataGrid -->
                        <RowDefinition Height="3" />
                        <!-- GridSplitter -->
                        <RowDefinition Height="Auto" />
                        <!-- Style section -->
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <ToolBar Grid.Row="0">
                        <Button Click="AddVariableItem_Click" ToolTip="Add Fixed Item">
                            <Image Source="/Assets/icons/icons8-insert-table-48.png" Width="18"/>
                        </Button>
                        <Button Click="RemoveVariableItem_Click" ToolTip="Remove Selected">
                            <Image Source="/Assets/icons/icons8-delete-table-48.png" Width="18"/>
                        </Button>
                    </ToolBar>

                    <!-- DataGrid -->
                    <DataGrid x:Name="VariableItemsGrid"
                                Grid.Row="1"
                                ItemsSource="{Binding VariableItems}"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                ColumnWidth="*"
                                HeadersVisibility="Column"
                                SelectionChanged="VariableItemsGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                            <DataGridComboBoxColumn Header="Type"
                                                SelectedItemBinding="{Binding Type}"
                                                ItemsSource="{Binding ItemTypes, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Splitter -->
                    <GridSplitter Grid.Row="2"
                                  Height="5"
                                  HorizontalAlignment="Stretch"
                                  Background="Gray"
                                  ShowsPreview="True"
                                  ResizeDirection="Rows"/>  

                    <!-- Properties -->
                    <Border Grid.Row="3"
                            Background="#F0F0F0"
                            Padding="10"
                            Visibility="{Binding IsFixedStyleVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel>
                            <TextBlock Text="Properties" FontWeight="Bold" Margin="0 0 0 8"/>

                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <TextBlock Text="(example) Font Size:"/>
                                    <TextBox Width="100" Margin="0 0 0 10"/>
                                    <TextBlock Text="(example) Value Format:"/>
                                    <ComboBox Width="150">
                                        <ComboBoxItem Content="Decimal" />
                                        <ComboBoxItem Content="Percentage" />
                                    </ComboBox>
                                </StackPanel>
                            </ScrollViewer>

                        </StackPanel>
                    </Border>

                </Grid>

            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
